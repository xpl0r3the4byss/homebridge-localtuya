{
  "pluginAlias": "LocalTuya",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "default": "LocalTuya"
      },
      "devices": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "title": "Name",
              "type": "string",
              "required": true,
              "description": "Name of the device"
            },
            "id": {
              "title": "Device ID",
              "type": "string",
              "required": true,
              "description": "The device ID (will be auto-populated when discovered)",
              "readonly": true
            },
            "key": {
              "title": "Local Key",
              "type": "string",
              "required": true,
              "description": "The local key for the device (required for control)"
            },
            "ip": {
              "title": "IP Address",
              "type": "string",
              "required": false,
              "format": "ipv4",
              "description": "The local IP address (will be auto-discovered)",
              "readonly": true
            },
            "type": {
              "title": "Device Type",
              "type": "string",
              "required": true,
              "default": "fanLight",
              "description": "The type of device",
              "oneOf": [
                {
                  "title": "Fan with Light",
                  "enum": ["fanLight"]
                }
              ]
            }
          }
        }
      },
      "discoveryTimeout": {
        "title": "Discovery Timeout",
        "type": "integer",
        "required": false,
        "default": 10,
        "minimum": 5,
        "maximum": 60,
        "description": "Timeout in seconds for device discovery (5-60)"
      },
      "retryAttempts": {
        "title": "Retry Attempts",
        "type": "integer",
        "default": 3,
        "minimum": 0,
        "maximum": 10,
        "description": "Number of retry attempts for failed operations"
      },
      "pollingInterval": {
        "title": "Polling Interval",
        "type": "integer",
        "default": 30,
        "minimum": 10,
        "maximum": 300,
        "description": "Interval in seconds to poll device status (10-300)"
      }
    }
  },
  "layout": [
    {
      "key": "name"
    },
    {
      "type": "help",
      "helpvalue": "<p class='notice notice-info'>Devices will be automatically discovered on your network. Simply enter the local key for each device you want to control.</p>"
    },
    {
      "key": "devices",
      "type": "array",
      "title": "Discovered Devices",
      "items": [
        {
          "type": "section",
          "items": [
            "devices[].name",
            "devices[].id",
            "devices[].key",
            "devices[].ip",
            "devices[].type"
          ]
        }
      ]
    },
    {
      "key": "discoveryTimeout"
    },
    {
      "key": "retryAttempts"
    },
    {
      "key": "pollingInterval"
    }
  ]
}